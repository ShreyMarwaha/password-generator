{
  "compilerOptions": {
    "baseUrl": "./src",
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "lib": [
      "es2021"
    ],
    "strict": true,
    "esModuleInterop": false,
    "declaration": true,
    "sourceMap": true,
    "outDir": "./dist"
  },
  "include": [
    "src/index.ts",
    "src/index.types.ts",
    "src/utils"
  ],
  "exclude": [
    "dist",
    "node_modules",
    "src/**/*.test.ts",
    "src/index.dev"
  ]
}
